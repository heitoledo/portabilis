<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name, class: "inline-block align-baseline text-right font-bold text-sm text-blue-500 hover:text-blue-800") %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name, class: "inline-block align-baseline text-right font-bold text-sm text-blue-500 hover:text-blue-800") %>
<% end %>

