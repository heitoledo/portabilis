<div class="container mx-auto">
  <%= link_to 'New User', new_user_path %>
  <% if user_signed_in? %>
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
  <% end %>
  <p class="text-center text-slate-700 text-4xl m-10">Users</p>
  <div class="relative overflow-x-auto">
    <table class="w-auto h-auto text-sm text-left text-gray-500 mx-auto rounded-lg p-10 shadow-lg">
      <thead class="text-xs text-gray-700 uppercase bg-gray-100">
        <tr>
          <th scope="col" class="px-6 py-3">Name</th>
          <th scope="col" class="px-6 py-3">Email</th>
          <th scope="col" class="px-6 py-3">Role</th>
          <th scope="col" class="px-6 py-3">Status</th>
          <th scope="col" class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="bg-white border-b-1">
            <td class="px-6 py-4"><%= user.name %></td>
            <td class="px-6 py-4"><%= user.email %></td>
            <td class="px-6 py-4"><%= user.role %></td>
            <td class="px-6 py-4"><%= user.active %></td>
            <td class="px-6 py-4">
              <%= link_to 'Edit', edit_user_path(user), class: "focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-4 py-2 mr-2 mb-2" %>
              <%= link_to 'Destroy', user, method: :delete, class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 mr-2 mb-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
